{
  "name": "simc-ast-builder",
  "version": "0.1.0",
  "description": "Parser and AST generator for SimulationCraft files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "generate:osx": "antlr4ts -visitor ./src/parser/antlr4/SimCExpr.g4",
    "generate:win": "antlr4ts -visitor -o ./src/parser/antlr4 ./src/parser/antlr4/SimCExpr.g4",
    "generate": "node -e \"process.platform === 'darwin' ? require('child_process').execSync('npm run generate:osx', {stdio: 'inherit'}) : require('child_process').execSync('npm run generate:win', {stdio: 'inherit'})\"",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*\" \"tests/**/*\" --config .prettierrc.js",
    "lint": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "example": "ts-node examples/basic-usage.ts"
  },
  "keywords": [
    "simc",
    "simulationcraft",
    "parser",
    "ast"
  ],
  "author": "The simc-ast-builder authors",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/simc-ast-builder"
  },
  "bugs": {
    "url": "https://github.com/username/simc-ast-builder/issues"
  },
  "homepage": "https://github.com/username/simc-ast-builder#readme",
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "deep-equal": "^2.2.3"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
